# ============================================
# ShareHub Backend - Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# ============================================
# Database Configuration (MySQL)
# ============================================
# Database host (usually 'localhost' for local development)
DB_HOST=localhost

# Database username
DB_USER=root

# Database password
DB_PASSWORD=your_password_here

# Database name (should match the database created in schema.sql)
DB_NAME=sharehub

# Database port (MySQL default is 3306)
DB_PORT=3306

# ============================================
# JWT (JSON Web Token) Configuration
# ============================================
# Secret key for signing JWT tokens (use a strong random string in production)
# Generate a secure random string: openssl rand -base64 32
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# JWT token expiration time (e.g., '7d' for 7 days, '24h' for 24 hours)
JWT_EXPIRE=7d

# ============================================
# Server Configuration
# ============================================
# Port number for the Express server
PORT=5000

# Environment mode: 'development' or 'production'
NODE_ENV=development

# ============================================
# File Upload Configuration
# ============================================
# Maximum file size in bytes (e.g., 5MB = 5242880 bytes)
MAX_FILE_SIZE=5242880

# Path where uploaded files will be stored (relative to backend folder)
UPLOAD_PATH=uploads/items

